void registrazione(utenti utente[],int i);
void menu_utente(utenti utente[],int i,artisti artista[],int scelta);








int main(void) {
	utenti utente[N_UTENTI];
    artisti artista[N_ARTISTI];
    int i=0, j=0;
    int scelta=0;

    interfaccia_iniziale(utente,i,scelta,artista);
    system("pause");
}






